// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.IOState
*/

	
{
    "NAME":"stat",
    "NETWORKGRP": "private",
    "VALUES": {
	"type": {
            "type": "Long",
            "description":"Sort Order Statistic",
	    "mockData":"0"
        },
	"apiTotals":{
            "type": "Map",
            "description":"Statistics",
	    "mockData":"[:]"
	},
	"codeTotals":{
            "type": "Map",
            "description":"Statistics",
	    "mockData":"[:]"
	},
	"userTotals":{
            "type": "Map",
            "description":"Statistics",
	    "mockData":"[:]"
	}
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"show",
			"URI": {
			    "show": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"Retrieve statistics for API's",
			    	"ROLES":{
				    "DEFAULT":["ROLE_ADMIN"],
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":["type"]
			        },
			        "RESPONSE": {
			        	"permitAll":["apiTotals","codeTotals","userTotals"]
			        }
			    }
			}
		}
	}
}
