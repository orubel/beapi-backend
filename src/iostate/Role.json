// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.IOState
*/

	
{
    "NAME":"role",
    "NETWORKGRP": "public",
    "VALUES": {
        "id": {
            "key": "PRIMARY",
            "type": "Long",
            "description":"ID for Event",
	    "mockData":"1"
        },
        "version": {
            "type": "Long",
            "description":"Version for Event",
	    "mockData":"0"
        },
	"authority":{
            "type": "String",
            "description":"Roles",
	    "mockData":"ROLE_USER"
	}
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"list",
			"URI": {
			    "create": {
			     	"METHOD":"POST",
			    	"DESCRIPTION":"Create new Role",
			    	"ROLES":{
				    "DEFAULT":["ROLE_ADMIN"],
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":["authority"]
			        },
			        "RESPONSE": {
			        	"permitAll":["id","version,authority"]
			        }
			    },
			    "list": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"List all Event Types",
			    	"ROLES":{
				    "DEFAULT":["ROLE_ADMIN"],
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":[]
			        },
			        "RESPONSE": {
			        	"permitAll":["id","version","authority"]
			        }
			    },
			    "delete": {
			     	"METHOD":"DELETE",
			    	"DESCRIPTION":"Delete Person",
			    	"ROLES":{
				    "DEFAULT":["ROLE_ADMIN"],
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":["authority"]
			        },
			        "RESPONSE": {
			        	"permitAll":["authority"]
			        }
			    }
			}
		}
	}
}
